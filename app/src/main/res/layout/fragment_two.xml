<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/switch_off"
            android:elevation="15dp"
            android:clipToPadding="false">

            <TextView
                android:id="@+id/raw_data_tab"
                android:text="@string/raw_data"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:paddingTop="5dp"
                android:textSize="15sp"
                android:paddingBottom="5dp"
                android:fontFamily="@font/nunito"
                android:background="@drawable/switch_on"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/final_tab"
                android:text="@string/final_report"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:paddingTop="5dp"
                android:textSize="15sp"
                android:paddingBottom="5dp"
                android:textColor="@color/login"
                android:fontFamily="@font/nunito"
                android:textStyle="bold"/>
        </LinearLayout>

        <ScrollView
            android:id="@+id/svSoundingList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="60dp"
            android:orientation="vertical"
            android:visibility="gone">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvSoundingList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </ScrollView>

        <ScrollView
            android:id="@+id/svFinalList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="60dp"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/soundingParent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/soundingContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="5dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/data_umum_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginBottom="10dp"
                        android:visibility="visible"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="30dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:fontFamily="@font/nunito"
                                android:gravity="center_horizontal"
                                android:text="@string/data_umum"
                                android:textSize="19sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="25dp"
                                android:layout_marginTop="20dp"
                                android:fontFamily="@font/helvetica"
                                android:gravity="center_horizontal"
                                android:text="@string/sarana_pengangkut"
                                android:textSize="14sp" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="25dp"
                                android:layout_marginTop="3dp"
                                android:layout_marginEnd="25dp"
                                android:background="@drawable/rounded_input">

                                <!-- INPUT -->
                                <androidx.appcompat.widget.AppCompatEditText
                                    android:id="@+id/nama_sarkut"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:fontFamily="@font/poppins_light"
                                    android:hint="@string/hint_sarana_pengangkut"
                                    android:inputType="numberDecimal"
                                    android:maxLength="18"
                                    android:maxLines="1"
                                    android:paddingStart="15dp"
                                    android:paddingTop="10dp"
                                    android:paddingEnd="10dp"
                                    android:paddingBottom="10dp"
                                    android:textCursorDrawable="@drawable/cursor_color"
                                    android:textSize="13sp" />
                            </RelativeLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="25dp"
                                android:layout_marginTop="12dp"
                                android:fontFamily="@font/helvetica"
                                android:gravity="center_horizontal"
                                android:text="@string/tanggal_ba"
                                android:textSize="14sp" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="25dp"
                                android:layout_marginTop="3dp"
                                android:layout_marginEnd="25dp"
                                android:background="@drawable/rounded_input">

                                <!-- INPUT -->
                                <androidx.appcompat.widget.AppCompatEditText
                                    android:id="@+id/tanggal_ba"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:clickable="false"
                                    android:cursorVisible="false"
                                    android:focusable="false"
                                    android:focusableInTouchMode="false"
                                    android:fontFamily="@font/poppins_light"
                                    android:hint="@string/hint_tanggal_ba"
                                    android:paddingStart="15dp"
                                    android:paddingTop="10dp"
                                    android:paddingEnd="10dp"
                                    android:paddingBottom="10dp"
                                    android:textCursorDrawable="@drawable/cursor_color"
                                    android:textSize="13sp" />
                            </RelativeLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="25dp"
                                android:layout_marginTop="12dp"
                                android:fontFamily="@font/helvetica"
                                android:gravity="center_horizontal"
                                android:text="@string/lokasi_ba"
                                android:textSize="14sp" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="25dp"
                                android:layout_marginTop="3dp"
                                android:layout_marginEnd="25dp"
                                android:background="@drawable/rounded_input">

                                <!-- INPUT -->
                                <androidx.appcompat.widget.AppCompatEditText
                                    android:id="@+id/lokasi_ba"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:fontFamily="@font/poppins_light"
                                    android:hint="@string/hint_lokasi_ba"
                                    android:paddingStart="15dp"
                                    android:paddingTop="10dp"
                                    android:paddingEnd="10dp"
                                    android:paddingBottom="10dp"
                                    android:textCursorDrawable="@drawable/cursor_color"
                                    android:textSize="13sp" />
                            </RelativeLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="25dp"
                                android:layout_marginTop="12dp"
                                android:fontFamily="@font/helvetica"
                                android:gravity="center_horizontal"
                                android:text="@string/jumlah_barcon"
                                android:textSize="14sp" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="25dp"
                                android:layout_marginTop="3dp"
                                android:layout_marginEnd="25dp"
                                android:background="@drawable/rounded_input">

                                <!-- INPUT -->
                                <androidx.appcompat.widget.AppCompatEditText
                                    android:id="@+id/jumlah_barcon"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:fontFamily="@font/poppins_light"
                                    android:hint="@string/hint_jumlah_barcon"
                                    android:inputType="numberDecimal"
                                    android:maxLength="18"
                                    android:maxLines="1"
                                    android:paddingStart="15dp"
                                    android:paddingTop="10dp"
                                    android:paddingEnd="10dp"
                                    android:paddingBottom="10dp"
                                    android:textCursorDrawable="@drawable/cursor_color"
                                    android:textSize="13sp" />
                            </RelativeLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="25dp"
                                android:layout_marginTop="12dp"
                                android:fontFamily="@font/helvetica"
                                android:gravity="center_horizontal"
                                android:text="@string/waktu_barcon"
                                android:textSize="14sp" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="25dp"
                                android:layout_marginTop="3dp"
                                android:layout_marginEnd="25dp"
                                android:background="@drawable/rounded_input">

                                <!-- INPUT -->
                                <androidx.appcompat.widget.AppCompatEditText
                                    android:id="@+id/waktu_barcon"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:clickable="false"
                                    android:cursorVisible="false"
                                    android:focusable="false"
                                    android:focusableInTouchMode="false"
                                    android:fontFamily="@font/poppins_light"
                                    android:hint="@string/hint_waktu_barcon"
                                    android:paddingStart="15dp"
                                    android:paddingTop="10dp"
                                    android:paddingEnd="10dp"
                                    android:paddingBottom="10dp"
                                    android:textCursorDrawable="@drawable/cursor_color"
                                    android:textSize="13sp" />
                            </RelativeLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/soundingCardView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginBottom="10dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:id="@+id/soundingLL"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="30dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/soundingLLTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:fontFamily="@font/nunito"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/titleLeft"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"/>

                                <TextView
                                    android:id="@+id/titleSounding1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="5"
                                    android:gravity="center_horizontal"
                                    android:text="@string/data_sounding"
                                    android:textSize="19sp"/>

                                <ImageView
                                    android:id="@+id/addOrClose1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.5"
                                    android:contentDescription="@string/top_border"
                                    android:elevation="20dp"
                                    android:src="@drawable/ic_close"
                                    android:visibility="invisible"/>
                            </LinearLayout>

                            <TextView
                                android:id="@+id/soundingAwal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="25dp"
                                android:layout_marginTop="20dp"
                                android:fontFamily="@font/helvetica"
                                android:text="@string/awal"
                                android:textSize="14sp"/>

                            <RelativeLayout
                                android:id="@+id/soundingRL"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="25dp"
                                android:layout_marginTop="3dp"
                                android:layout_marginEnd="25dp"
                                android:background="@drawable/rounded_input">

                                <Spinner
                                    android:id="@+id/awal1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/rounded_input"
                                    android:spinnerMode="dropdown"/>
                            </RelativeLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="25dp"
                                android:layout_marginTop="12dp"
                                android:fontFamily="@font/helvetica"
                                android:gravity="center_horizontal"
                                android:text="@string/akhir"
                                android:textSize="14sp" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="25dp"
                                android:layout_marginTop="3dp"
                                android:layout_marginEnd="25dp"
                                android:background="@drawable/rounded_input">

                                <Spinner
                                    android:id="@+id/akhir1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/rounded_input"
                                    android:spinnerMode="dropdown" />
                            </RelativeLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <Button
                    android:id="@+id/btnAddSounding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/rounded_button_white"
                    android:elevation="5dp"
                    android:fontFamily="@font/nunito"
                    android:gravity="center"
                    android:text="@string/tambah_sounding"
                    android:textColor="@color/login"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="100dp"
                    android:background="@drawable/rounded_button"
                    android:elevation="5dp"
                    android:fontFamily="@font/nunito"
                    android:gravity="center"
                    android:text="@string/simpan_data"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvFinalList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </ScrollView>

        <TextView
            android:id="@+id/tvNoRawDataAvailable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/no_raw_record"
            android:textSize="18sp"
            android:visibility="gone"
            tools:visibility="gone"/>

        <TextView
            android:id="@+id/tvNoFinalDataAvailable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/no_final_record"
            android:textSize="18sp"
            android:visibility="gone"/>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabFinalReport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="75dp"
        android:src="@drawable/ic_add"
        android:backgroundTint="@color/login"
        app:borderWidth="0dp"
        android:contentDescription="@string/final_report"
        android:visibility="gone"/>

</FrameLayout>