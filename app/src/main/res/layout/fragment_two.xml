<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/switch_off"
            android:elevation="15dp"
            android:clipToPadding="false">

            <TextView
                android:id="@+id/raw_data_tab"
                android:text="@string/raw_data"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:paddingTop="5dp"
                android:textSize="15sp"
                android:paddingBottom="5dp"
                android:fontFamily="@font/nunito"
                android:background="@drawable/switch_on"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/final_tab"
                android:text="@string/final_report"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:paddingTop="5dp"
                android:textSize="15sp"
                android:paddingBottom="5dp"
                android:textColor="@color/login"
                android:fontFamily="@font/nunito"
                android:textStyle="bold"/>
        </LinearLayout>

        <ScrollView
            android:id="@+id/svSoundingList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="60dp"
            android:orientation="vertical"
            android:visibility="gone">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvSoundingList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </ScrollView>

        <ScrollView
            android:id="@+id/svFinalList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="60dp"
            android:orientation="vertical"
            android:visibility="gone">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvFinalList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </ScrollView>

        <TextView
            android:id="@+id/tvNoRawDataAvailable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/no_raw_record"
            android:textSize="18sp"
            android:visibility="gone"
            tools:visibility="gone"/>

        <TextView
            android:id="@+id/tvNoFinalDataAvailable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/no_final_record"
            android:textSize="18sp"
            android:visibility="gone"
            tools:visibility="gone"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/data_lapangan_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/nunito"
                    android:gravity="center_horizontal"
                    android:text="@string/data_umum"
                    android:textSize="19sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/helvetica"
                    android:gravity="center_horizontal"
                    android:text="@string/sarana_pengangkut"
                    android:textSize="14sp"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="25dp"
                    android:background="@drawable/rounded_input">

                    <!-- INPUT -->
                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/tinggi_cairan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/poppins_light"
                        android:hint="@string/hint_sarana_pengangkut"
                        android:inputType="numberDecimal"
                        android:maxLength="18"
                        android:maxLines="1"
                        android:paddingStart="15dp"
                        android:paddingTop="14dp"
                        android:paddingEnd="0dp"
                        android:paddingBottom="14dp"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textSize="13sp" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/helvetica"
                    android:gravity="center_horizontal"
                    android:text="@string/suhu_cairan"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="25dp"
                    android:background="@drawable/rounded_input">

                    <!-- INPUT -->
                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/suhu_cairan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/poppins_light"
                        android:hint="@string/suhu_cairan"
                        android:inputType="numberDecimal"
                        android:maxLength="18"
                        android:maxLines="1"
                        android:paddingStart="15dp"
                        android:paddingTop="14dp"
                        android:paddingEnd="0dp"
                        android:paddingBottom="14dp"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textSize="13sp" />

                </RelativeLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabFinalReport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="75dp"
        android:src="@drawable/ic_add"
        android:backgroundTint="@color/login"
        app:borderWidth="0dp"
        android:contentDescription="@string/final_report"
        android:visibility="gone"/>

</FrameLayout>