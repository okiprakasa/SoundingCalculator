<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"

            android:background="@drawable/switch_off"
            android:elevation="15dp"
            android:clipToPadding="false">

            <TextView
                android:id="@+id/raw_data_tab"
                android:text="@string/raw_data"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:paddingTop="5dp"
                android:textSize="15sp"
                android:paddingBottom="5dp"
                android:fontFamily="@font/nunito"
                android:background="@drawable/switch_on"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/final_tab"
                android:text="@string/final_report"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:paddingTop="5dp"
                android:textSize="15sp"
                android:paddingBottom="5dp"
                android:textColor="@color/login"
                android:fontFamily="@font/nunito"
                android:textStyle="bold"/>

        </LinearLayout>

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_light"
            android:background="@drawable/rounded_button"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:text="@string/tambah_data"/>

        <ScrollView
            android:id="@+id/svSoundingList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="60dp"
            android:orientation="vertical"
            android:visibility="gone">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvSoundingList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </ScrollView>

        <ScrollView
            android:id="@+id/svFinalList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="60dp"
            android:orientation="vertical"
            android:visibility="gone">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvFinalList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </ScrollView>

        <TextView
            android:id="@+id/tvNoRecordsAvailable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/no_record"
            android:textSize="18sp"
            android:visibility="gone"
            tools:visibility="gone"/>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabRawData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="75dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_add"
        android:backgroundTint="@color/login"
        app:borderWidth="0dp"
        android:contentDescription="@string/raw_data"
        android:visibility="gone"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabFinalReport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add"
        android:backgroundTint="@color/login"
        app:borderWidth="0dp"
        android:contentDescription="@string/raw_data"
        android:visibility="gone"/>

</FrameLayout>