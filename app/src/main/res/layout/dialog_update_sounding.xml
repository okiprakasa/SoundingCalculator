<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/rounded"
    android:padding="10dp">

    <TextView
        android:text="@string/tinggi_cairan"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/helvetica"
        android:textSize="15sp" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/tinggi_cairan"
        android:hint="@string/tinggi_cairan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/login"
        android:fontFamily="@font/poppins_light"
        android:textSize="13sp"
        android:autofillHints="name"
        android:inputType="numberDecimal"
        android:scrollbars="vertical"/>

    <TextView
        android:text="@string/suhu_cairan"
        android:layout_width="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/helvetica"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/suhu_cairan"
        android:hint="@string/suhu_cairan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="10dp"
        android:inputType="numberDecimal"
        android:backgroundTint="@color/login"
        android:fontFamily="@font/poppins_light"
        android:textSize="13sp"
        android:scrollbars="vertical"
        tools:ignore="Autofill"/>

    <TextView
        android:text="@string/suhu_tetap"
        android:layout_width="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/helvetica"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/suhu_tetap"
        android:hint="@string/suhu_tetap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="10dp"
        android:inputType="numberDecimal"
        android:backgroundTint="@color/login"
        android:fontFamily="@font/poppins_light"
        android:textSize="13sp"
        android:scrollbars="vertical"
        tools:ignore="Autofill"/>

    <TextView
        android:text="@string/tinggi_meja"
        android:layout_width="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/helvetica"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/tinggi_meja"
        android:hint="@string/tinggi_meja"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="10dp"
        android:inputType="numberDecimal"
        android:backgroundTint="@color/login"
        android:fontFamily="@font/poppins_light"
        android:textSize="13sp"
        android:scrollbars="vertical"
        tools:ignore="Autofill"/>

    <TextView
        android:text="@string/koefisien_tangki"
        android:layout_width="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/helvetica"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/koefisien_tangki"
        android:hint="@string/koefisien_tangki"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="10dp"
        android:inputType="numberDecimal"
        android:backgroundTint="@color/login"
        android:fontFamily="@font/poppins_light"
        android:textSize="13sp"
        android:scrollbars="vertical"
        tools:ignore="Autofill"/>

    <TextView
        android:text="@string/tabel_kalibrasi1"
        android:layout_width="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/helvetica"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/tabel_kalibrasi"
        android:hint="@string/tabel_kalibrasi1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="10dp"
        android:inputType="numberDecimal"
        android:backgroundTint="@color/login"
        android:fontFamily="@font/poppins_light"
        android:textSize="13sp"
        android:scrollbars="vertical"
        tools:ignore="Autofill"/>

    <TextView
        android:text="@string/tabel_kalibrasi2"
        android:layout_width="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/helvetica"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/tabel_kalibrasi2"
        android:hint="@string/tabel_kalibrasi2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="10dp"
        android:inputType="numberDecimal"
        android:backgroundTint="@color/login"
        android:fontFamily="@font/poppins_light"
        android:textSize="13sp"
        android:scrollbars="vertical"
        tools:ignore="Autofill"/>

    <TextView
        android:text="@string/no_tangki"
        android:layout_width="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/helvetica"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:visibility="gone"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/no_tangki"
        android:hint="@string/no_tangki"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/login"
        android:fontFamily="@font/poppins_light"
        android:textSize="13sp"
        android:scrollbars="vertical"
        tools:ignore="Autofill"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/helvetica"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="@string/nama_pegawai"
        android:textSize="15sp"
        android:visibility="gone"/>

    <Spinner
        android:id="@+id/nama_pegawai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/login"
        android:fontFamily="@font/poppins_light"
        android:textSize="13sp"
        android:scrollbars="vertical"
        tools:ignore="Autofill"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/helvetica"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="@string/pengguna_jasa"
        android:textSize="15sp"
        android:visibility="gone"/>

    <Spinner
        android:id="@+id/nama_pengguna_jasa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/login"
        android:fontFamily="@font/poppins_light"
        android:textSize="13sp"
        android:scrollbars="vertical"
        tools:ignore="Autofill"
        android:visibility="gone"/>

    <TextView
        android:text="@string/waktu"
        android:layout_width="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/helvetica"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:visibility="gone"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/waktu"
        android:hint="@string/waktu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="10dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:backgroundTint="@color/login"
        android:fontFamily="@font/poppins_light"
        android:textSize="13sp"
        android:scrollbars="vertical"
        tools:ignore="Autofill"
        android:visibility="gone"/>

    <TextView
        android:text="@string/no_dokumen"
        android:layout_width="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/helvetica"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:visibility="gone"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/no_dokumen"
        android:hint="@string/no_dokumen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/login"
        android:fontFamily="@font/poppins_light"
        android:textSize="13sp"
        android:scrollbars="vertical"
        tools:ignore="Autofill"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="-10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:fontFamily="@font/nunito"
            android:gravity="start"
            android:padding="10dp"
            android:textColor="@color/login"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvNext"
            android:text="@string/next"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/nunito"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@color/login"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/tvUpdate"
            android:text="@string/update"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_height="match_parent"
            android:gravity="end"
            android:fontFamily="@font/nunito"
            android:textSize="15sp"
            android:textColor="@color/login"
            android:textStyle="bold"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvBack"
            android:text="@string/back"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:padding="10dp"
            android:gravity="center"
            android:fontFamily="@font/nunito"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvCancel"
            android:text="@android:string/cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:padding="10dp"
            android:gravity="center"
            android:fontFamily="@font/nunito"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>