<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/rounded"
    android:padding="10dp">

    <TextView
        android:text="@string/update_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:fontFamily="@font/nunito"
        android:textSize="17sp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:textStyle="bold" />

    <TextView
        android:text="@string/tinggi_cairan"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/helvetica"
        android:textSize="15sp" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/tinggi_cairan"
        android:hint="@string/tinggi_cairan"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:backgroundTint="@color/login"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_light"
        android:textSize="13sp"
        android:autofillHints="name"
        android:inputType="numberDecimal"
        android:scrollbars="vertical"/>


    <TextView
        android:text="@string/suhu_cairan"
        android:layout_width="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/helvetica"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/suhu_cairan"
        android:hint="@string/suhu_cairan"
        android:layout_width="match_parent"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:backgroundTint="@color/login"
        android:fontFamily="@font/poppins_light"
        android:textSize="13sp"
        android:scrollbars="vertical"
        tools:ignore="Autofill"/>

    <TextView
        android:text="@string/suhu_tetap"
        android:layout_width="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/helvetica"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/suhu_tetap"
        android:hint="@string/suhu_tetap"
        android:layout_width="match_parent"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:backgroundTint="@color/login"
        android:fontFamily="@font/poppins_light"
        android:textSize="13sp"
        android:scrollbars="vertical"
        tools:ignore="Autofill"/>

    <TextView
        android:text="@string/tinggi_meja"
        android:layout_width="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/helvetica"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/tinggi_meja"
        android:hint="@string/tinggi_meja"
        android:layout_width="match_parent"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:backgroundTint="@color/login"
        android:fontFamily="@font/poppins_light"
        android:textSize="13sp"
        android:scrollbars="vertical"
        tools:ignore="Autofill"/>

    <TextView
        android:text="@string/koefisien_tangki"
        android:layout_width="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/helvetica"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/koefisien_tangki"
        android:hint="@string/koefisien_tangki"
        android:layout_width="match_parent"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:backgroundTint="@color/login"
        android:fontFamily="@font/poppins_light"
        android:textSize="13sp"
        android:scrollbars="vertical"
        tools:ignore="Autofill"/>

    <TextView
        android:text="@string/tabel_kalibrasi1"
        android:layout_width="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/helvetica"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/tabel_kalibrasi"
        android:hint="@string/koefisien_tangki"
        android:layout_width="match_parent"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:backgroundTint="@color/login"
        android:fontFamily="@font/poppins_light"
        android:textSize="13sp"
        android:scrollbars="vertical"
        tools:ignore="Autofill"/>

    <TextView
        android:text="@string/tabel_kalibrasi2"
        android:layout_width="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/helvetica"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/tabel_kalibrasi2"
        android:hint="@string/koefisien_tangki"
        android:layout_width="match_parent"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:backgroundTint="@color/login"
        android:fontFamily="@font/poppins_light"
        android:textSize="13sp"
        android:scrollbars="vertical"
        tools:ignore="Autofill"/>

    <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/update_jabatan"
        android:id="@+id/judul_perusahaan"
        android:layout_width="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/helvetica"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="@string/perusahaan"
        android:textSize="15sp"
        android:visibility="gone"/>

    <Spinner
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/judul_perusahaan"
        android:id="@+id/update_perusahaan"
        android:layout_width="match_parent"
        android:layout_marginStart="-5dp"
        android:layout_marginTop="-10dp"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine|textPersonName"
        android:backgroundTint="@color/login"
        android:hint="@string/hint_perusahaan"
        android:fontFamily="@font/poppins_light"
        android:layout_marginEnd="5dp"
        android:textSize="13sp"
        android:scrollbars="vertical"
        tools:ignore="Autofill"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="-10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:gravity="center"
            android:fontFamily="@font/nunito"
            android:textSize="15sp"
            android:padding="10dp"
            android:textColor="@color/login"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvNext"
            android:text="@string/next"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_height="match_parent"
            android:gravity="end"
            android:fontFamily="@font/nunito"
            android:textSize="15sp"
            android:textColor="@color/login"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvCancel"
            android:text="@android:string/cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:padding="10dp"
            android:gravity="end"
            android:fontFamily="@font/nunito"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>